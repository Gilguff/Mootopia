<turbo-stream action="replace" target="follow_button_<%= @user.id %>">
  <template>
    <% if current_user.following.include?(@user) %>
      <%= button_to "Unfollow", followings_path(followed_id: @user.id), method: :delete, remote: true, data: { turbo_stream: true } %>
    <% else %>
      <%= button_to "Follow", followings_path(followed_id: @user.id), method: :post, remote: true, data: { turbo_stream: true } %>
    <% end %>
  </template>
</turbo-stream>
