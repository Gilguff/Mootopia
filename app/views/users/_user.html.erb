<div>
  <h2><%= link_to user.username, user_profile_path(user) %> </h2>
  <% unless current_user == user %>
    <% if current_user.following.include?(user) %>
      <%= button_to 'Unfollow', following_path(current_user.active_followings.find_by(followed_id: user.id)), method: :delete %>
    <% else %>
      <%= button_to 'Follow', followings_path(followed_id: user.id), method: :post %>
    <% end %>
  <% end %>
</div>
