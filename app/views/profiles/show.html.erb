<h1><%= @user.username %></h1>

<%= image_tag @profile.profile_picture_url, class: "profile-picture"  %>
<p><%= @profile.bio.presence || "No Yapping To Be Seen Here." %></p>
<p>Followers: <%= @user.followers.count %></p>
<p>Following: <%= @user.following.count %></p>
<p>Total Likes: <%= @user.total_likes %></p>

<% if current_user == @user %>
  <%= link_to "Edit", edit_user_profile_path(@user) %><br />
  <%= link_to "New Post", new_post_path %>
<% end %>

<div class="post-container">
    <div class="post">
    <%= render @posts %>
    </div>
</div>
