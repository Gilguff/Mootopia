<%= form_with(model: [@user, @profile], local: true) do |form| %>
  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.label :profile_picture %>
    <%= form.text_field :profile_picture, placeholder: "Enter an image URL" %>
  </div>

  <div>
    <%= form.submit "Update Profile" %>
  </div>
<% end %>

<br />
<%= link_to "Cancel", user_profile_path(current_user) %>
